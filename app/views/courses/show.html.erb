<br />

<div class = "booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <%= image_tag @course.image, class: 'img-fluid' %>
  <div class = "row">
    <div class="col-sm-4 text-center">
      <% if current_user && current_user == @course.user %>
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger col-6' %>
        <br />
        <br />
      <% end %>


      <% if current_user %>
        <% if current_user.enrolled_in?(@course) %>
          <h3 class = "btn btn-success col-6">You are enrolled</h3>
        <% else %>
          <% if @course.free? %>
            <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary col-6', method: :post %>
          <% else %>
            <%= form_tag course_enrollments_path(@course) do %>
              <article>
                <% if flash[:error].present? %>
                  <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                  </div>
                <% end %>
                <label class="amount">
                  <span class = "badge badge-default"><%= number_to_currency(@course.cost, unit: "Â£") %></span>
                </label>
              </article>

              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="<%= @course.title %>"
                      data-email="<%= current_user.email %>"
                      data-amount="<%= (@course.cost * 100).to_i %>"
                      data-locale="auto"
                      data-currency="GBP"></script>
            <% end %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to 'Sign in to Enroll', new_user_session_path, class: 'btn btn-warning' %>
      <% end %>
    </div>

    <div class="col-sm-8">
      <%= @course.description %>
    </div>
  </div>
  <br />

  <div class = "col-12">
    <% @course.sections.rank(:row_order).each do |section| %>
      <div class = "section">
        <h3>
        <%= section.title %>
        </h3>
        <div class = "row">
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <div class = "col-12 col-sm-6 col-md-4">
              <div class = "lesson text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class = "clear" />
      </div>
      <br />
    <% end %>
  </div>
</div>
