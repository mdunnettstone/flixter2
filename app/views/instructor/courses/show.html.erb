<br />
<div class = "booyah-box col-10 offset-1">
  <h1><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview as a student', course_path(@course), class: 'btn btn-warning float-right' %>
  <div class = "text-center">
    <%= link_to 'New section', new_instructor_course_section_path(@course), class: 'btn btn-primary' %>
  </div>
  <ul>
    <% @course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-primary' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <hr class = "clear mt-4"/>
      </li>
    <% end %>
  </ul>
</div>